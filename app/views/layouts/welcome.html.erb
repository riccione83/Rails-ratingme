</script>

</head>
<body>

	<div class="container">
		<div class="row">
			<div class="col-md-6 col-md-offset-3 panel panel-default">
				<div class="container">
					<h1 class="margin-base-vertical text-center">Welcome to RatingMe</h1>
				</div>
				<p style="font-family: 'Josefin Sans', sans-serif;">
					RatingMe, the social rating app in 3 question. Rate what you want and discover the best places around you. 
				</p>

				<form class="margin-base-vertical">
					<p class="text-center">
					  <%= link_to "Register", register_path, class:"btn btn-success btn-lg", style:"font-family: 'Josefin Sans', sans-serif;" %>
					  or
					  <%= link_to "Login", login_path, class:"btn btn-info btn-lg", style:"font-family: 'Josefin Sans', sans-serif;" %>
					</p>
				</form>
				<hr>
	            <p class="text-center">
	                <%= link_to "Let me to see", start_path, class:"btn btn-warning btn-lg", style:"font-family: 'Josefin Sans', sans-serif;" %>
	            </p>
			</div><!-- //main content -->
		</div><!-- //row -->
	</div> <!-- //container -->

</body>
</html>