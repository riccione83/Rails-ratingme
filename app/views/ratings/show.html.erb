<p id="notice"><%= notice %></p>

<p>
  <strong>Description:</strong>
  <%= @rating.description %>
</p>

<p>
  <strong><%= @rating.review.question1 %></strong>
  <%=star_rating(@rating.rate_question1)%>
</p>

<p>
  <strong><%= @rating.review.question2 %></strong>
 <%=star_rating(@rating.rate_question2)%>
</p>

<p>
  <strong><%= @rating.review.question3 %></strong>
  <%=star_rating(@rating.rate_question3)%>
</p>

<p>
  Posted by:
  <%= @rating.user.user_name %>, <%= time_ago_in_words(@rating.created_at) %> ago
</p>

<div class="fb-like" data-href=<%= rating_path(@rating) %> data-layout="standard" data-action="like" data-show-faces="true" data-share="true"></div>

<br>

<% if isLoggedIn? and @rating.user_id == get_current_user_id %>
  <%= link_to 'Edit', edit_rating_path(@rating) %> |
<% end %>

<% if @review %>
  <%= link_to 'Back', reviews_path %>
<% else %>
  <%= link_to 'Back', :back %>
<% end %>
