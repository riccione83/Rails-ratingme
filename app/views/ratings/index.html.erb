<p id="notice"><%= notice %></p>


<h1>I miei commenti</h1>

<h2><%= @review.title %></h2>
<h3><%= @review.description %></h3>

<table>


  <% @ratings.each do |rating| %>
    <tr>
      <td><%= rating.description %></td>
    </tr>
  <% end %>
</table>
<%= link_to 'New vote', new_rating_path %>




<h1>Listing Ratings</h1>

<table>
  <thead>
    <tr>
      <th>Review</th>
      <th>User</th>
      <th>User name</th>
      <th>Point</th>
      <th>Description</th>
      <th>Rate question1</th>
      <th>Rate question2</th>
      <th>Rate question3</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ratings.each do |rating| %>
      <tr>
        <td><%= rating.review_id %></td>
        <td><%= rating.user_id %></td>
        <td><%= rating.user_name %></td>
        <td><%= rating.point %></td>
        <td><%= rating.description %></td>
        <td><%= rating.rate_question1 %></td>
        <td><%= rating.rate_question2 %></td>
        <td><%= rating.rate_question3 %></td>
        <td><%= link_to 'Show', rating %></td>
        <td><%= link_to 'Edit', edit_rating_path(rating) %></td>
        <td><%= link_to 'Destroy', rating, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Rating', new_rating_path %>


<h2>Add a review:</h2>
<%= form_for([@review, @review.ratings.build]) do |f| %>
  <p>
    <%= f.label :description %><br>
    <%= f.text_field :description %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>