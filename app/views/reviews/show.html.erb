<p>
  <strong>Title:</strong>
  <%= @review.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @review.description %>
</p>

<p>
  <strong>Lat:</strong>
  <%= @review.latitude %>
</p>

<p>
  <strong>Lon:</strong>
  <%= @review.longitude %>
</p>

<p>
  <strong>Question1:</strong>
  <%= @review.question1 %>
</p>

<p>
  <strong>Question2:</strong>
  <%= @review.question2 %>
</p>

<p>
  <strong>Question3:</strong>
  <%= @review.question3 %>
</p>

<p>
  <strong>Isadvertisement:</strong>
  <%= @review.isAdvertisement %>
</p>

<p>
  <strong>Adimagelink:</strong>
  <%= @review.adImageLink %>
</p>

<% if isLoggedIn? %>
  <%= link_to 'Edit', edit_review_path(@review) %> |
<% end %>
<%= link_to 'Back', reviews_path %>

<hr>

<h2>Ratings</h2>
<table>
  <% @ratings.each do |rating| %>
    <tr>
      <td><%= rating.description %> 
      <% if isLoggedIn? %>
        <%= link_to 'Edit', edit_review_rating_path(@review,rating) %></td>
      <% end %>
    </tr>
  <% end %>
</table>


<% if isLoggedIn? %>

<hr>

<h2>Add a rate:</h2>
<%= form_for([@review, @review.ratings.build]) do |f| %>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :rate_question1 %><br>
    <%= f.number_field :rate_question1 %>
  </div>
  <div class="field">
    <%= f.label :rate_question2 %><br>
    <%= f.number_field :rate_question2 %>
  </div>
  <div class="field">
    <%= f.label :rate_question3 %><br>
    <%= f.number_field :rate_question3 %>
  </div>

  <p>
    <%= f.submit %>
  </p>
<% end %>

<% end %>


